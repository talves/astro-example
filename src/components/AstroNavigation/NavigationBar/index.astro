---
import MenuButton from "./menu-button.astro";
const props = Astro.props;
---

<header class="text-gray-800 bg-gray-200 border-gray-200 px-2 sm:px-4 py-2.5 dark:bg-gray-800 dark:text-gray-300">
    <div class="container flex justify-between items-center mx-auto">
        <a href="/" class="flex items-center" aria-label="Site Root">
            <span class="self-center text-4xl font-semibold whitespace-nowrap dark:text-gray-100 italic">
                {props.label}
            </span>
        </a>
        <MenuButton onToggle={props.onToggle}/>
        <slot />
    </div>
</header>